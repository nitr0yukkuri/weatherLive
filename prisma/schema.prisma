// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // ★★★ 修正箇所: DATABASE_URL から PRISMA_DATABASE_URL に変更 ★★★
  url      = env("PRISMA_DATABASE_URL")
}

// アイテムのマスターデータ
model Item {
  id          Int             @id @default(autoincrement())
  name        String          @unique
  description String
  rarity      String          @default("normal")
  iconName    String?
  weather     String?
  inventories UserInventory[] // 連携を追加
}

// ユーザーの実績進捗を記録するテーブル
model UserProgress {
  id        Int @id @default(1) // ユーザーが一人を想定し、常にID: 1
  walkCount Int @default(0)    // おさんぽ回数
}

// 手に入れたアイテムを記録するテーブル
model UserInventory {
  id       Int  @id @default(autoincrement())
  itemId   Int  @unique      // アイテムID
  quantity Int  @default(0)  // 所持数
  item     Item @relation(fields: [itemId], references: [id])
}