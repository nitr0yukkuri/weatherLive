// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// アイテムのマスターデータ
model Item {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String
  rarity      String   @default("normal")
  iconName    String?
  weather     String?
  // ★★★ ここから追加 ★★★
  inventories UserInventory[] // 連携を追加
  // ★★★ ここまで追加 ★★★
}

// ★★★ ここから追加 ★★★
// 手に入れたアイテムを記録するテーブル
model UserInventory {
  id       Int    @id @default(autoincrement())
  itemId   Int    @unique // アイテムID
  quantity Int    @default(0) // 所持数
  item     Item   @relation(fields: [itemId], references: [id])
}
// ★★★ ここまで追加 ★★★